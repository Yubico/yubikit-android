<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CREDENTIAL_MANAGER_SET_ALLOWED_PROVIDERS" />

    <application android:supportsRtl="true">

        <activity
            android:name=".internal.YubiKitProviderServiceActivity"
            android:configChanges="keyboardHidden|keyboard"
            android:label="@string/yk_provider_service_settings_label"
            android:theme="@style/Theme.Transparent" />

        <activity
            android:name=".internal.YubiKitProviderSettingsActivity"
            android:label="@string/yk_provider_service_settings_activity_name"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:taskAffinity=""
            android:exported="false" />

        <service
            android:name=".internal.YubiKitProviderService"
            android:enabled="true"
            android:exported="true"
            android:icon="@mipmap/ic_service"
            android:label="@string/yk_provider_service_settings_label"
            android:permission="android.permission.BIND_CREDENTIAL_PROVIDER_SERVICE"
            android:roundIcon="@mipmap/ic_service_round">
            <intent-filter>
                <action android:name="android.service.credentials.CredentialProviderService" />
            </intent-filter>

            <meta-data
                android:name="android.credentials.provider"
                android:resource="@xml/provider" />
        </service>
    </application>

</manifest>